<?xml version="1.0" encoding="utf-8"?>
<moduledefinition version="1">
	<general>
		<default name="images" version="1.2.0" description="Gestion des images" icon="|img/icon_images.png" />
		<group id="cms3" captioni18n="heading|heading.group.caption" />
	</general>
	<dependencies>
		<dependency name="heading" kind="module" version="1.6.4" />
		<dependency name="uploader" kind="module" />		
	</dependencies>
	<registry>
		<entry id="HeadingElement">
			<type
				id="image" caption="Image"
				image="images|img/images.png"
				icon="images|img/icon_images.png"
				classid="images|imageservices"
				adminurl="images|admin|prepareEdit"
				fronturl="images|imagefront::default"
				canrss="true"
			/>
		</entry>
		<entry id="Portlet">
			<type
				id="image"
				group="element"
				description="Cette portlet permet d'afficher vos images."
				caption="Image"
				portlettype="PortletImage"
				icon="images|img/portleticon_images.png"
			/>
			<type 
				id="diaporama"
				group="element"
				description="Cette portlet permet d'afficher des diaporama."
				caption="Diaporama"
				portlettype="PortletDiaporama"
				icon="images|img/portleticon_images.png" 
			/>
		</entry>
		<entry id="ModuleTables">
			<table name="images" />
		</entry>
		<entry id="ModuleDirectories">
			<directory name="images" />
		</entry>
		<entry id="CMSWysiwygParser">
			<parser name="ImageWysiwygParser" />
		</entry>
	</registry>
	<userpreferences>
        <group id="headingNotification" caption="Notification">
			<preference name="imageNotification" caption="Image" default="0" type="bool" description="Donne la possibilité d'envoyer une notification par mail lorsqu'une image est publiée." />
        </group>
	</userpreferences>
	<updates>
		<update from="1" to="1.0.0" script="doNothing" />
		<update from="1.0.0" to="1.1.0" script="1_0_0_to_1_1_0" />
		<update from="1.1.0" to="1.2.0" script="1_1_0_to_1_2_0" />
	</updates>
</moduledefinition>